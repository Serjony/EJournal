<Window x:Class="EJournalUI.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Dialog Window" Height="156" Width="250">
    <StackPanel Background="#c5cfd4">
        <TextBlock x:Name="TitleTextBlock"/>
        <TextBox x:Name="NameTextBox" Height="22"/>
        <TextBlock Foreground="White" x:Name="ComboBoxNameTextBlock" Text="Course:"/>
        <ComboBox x:Name="CourseComboBox" IsEditable="True"/>
        <DockPanel >
            <Button Background="White" DockPanel.Dock="Right" x:Name="AcceptButton" Content="Аccept" Width="90" Height="20" HorizontalAlignment="Right" Margin="2,2,2,2"/>
            <Button DockPanel.Dock="Right" x:Name="DeleteButton" Content="Delete" Width="60" Height="20" HorizontalAlignment="Right" Background="White" Margin="2,2,2,2" IsEnabled="False" Visibility="Hidden"/>
        </DockPanel>
    </StackPanel>
</Window>
