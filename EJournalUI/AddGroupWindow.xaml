<Window x:Class="EJournalUI.AddGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EJournalUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddGroupWindow" Height="156" Width="250">
    <StackPanel>
        <TextBlock Text="Group name:"/>
        <TextBox x:Name="GroupNameTextBox"/>
        <TextBlock Text="Course:"/>
        <ComboBox x:Name="CourseComboBox" IsEditable="True"/>
        <Button x:Name="CreateButton" Content="Create" Width="86" Margin="0,10,0,0" HorizontalAlignment="Center" Click="CreateButton_Click"/>
    </StackPanel>
</Window>
