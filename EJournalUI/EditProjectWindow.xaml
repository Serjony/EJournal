<Window x:Class="EJournalUI.EditProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EJournalUI"
        mc:Ignorable="d"
        Title="EditProjectWindow" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Project name:"/>
            <TextBox x:Name="ProjectNameTextBox"/>
            <TextBlock Text="Description:"/>
            <TextBox x:Name="DescriptionTextBox" Height="74"/>
            <Button x:Name="AcceptButton" Content="Аccept" Width="86" Margin="0,10,0,0" HorizontalAlignment="Center" Click="Button_AcceptProject_Click"/>
        </StackPanel>
    </Grid>
</Window>
